---
const pageTitle = "Github Profile Searcher";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<link rel="stylesheet" href = "output.css">
		<script src = "../scripts/script.js"></script>
	</head>
	<body>
		<template id = "repo-card">
			<div class = "repo">
				<h4 class = "repo-name" repo-name></h4>
				<p class = "repo-description" repo-description></p>
				<p class = "repo-forks" repo-forks></p>
				<p class = "repo-stars" repo-stars></p>
				<p class = "repo-licence" repo-licence></p>
				<p class = "last-updated" repo-time></p>
			</div>
		</template>
		<template id = "user-card-template">
			<div class = "card">
				<img class = "avatar" src = "" data-icon></img>
				<p class = "username" data-header></p>
				<p class = "bio" data-body></p>
			</div>
		</template>

		<header>
			<div class = "search-wrapper">
				<img src = "searchicon.png" id = "search-icon">
				<input type="search" id = "search" placeholder="username" spellcheck="false">
			</div>
			<div class = user-cards id = "card-container"></div>
		</header>
		<main>
		<img id = "user-avatar" src = ""></img>
		<div class = "user-info">
			<p><b>Followers</b></p>
			<p class = "card-text" id = "follower-count"><p>
		</div>
		<div class = "user-info">
			<p><b>Following</b></p>
			<p class = "card-text" id = "following-count"><p>
		</div>
		<div class = "user-info" id = "location">
			<p><b>location</b></p>
			<p class = "card-text" id = "location-text"><p>
		</div>
		<h2 id = "username"></h2>
		<p id = "bio-text"></p>
		</main>
		<article id = "repos-container"></article>
	</body>
</html>
